{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index.php"
    },
    {
      "source": "/([^/]+)$",
      "destination": "/api/$1.php"
    },
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ]
}

